.custom-theme
  .slider-selection
    background brandInfoHoverColor

  .slider-handle
    box-shadow none
    background-image none
    background-color grayColor
    box-shadow 0 1px 5px rgba(0,0,0,.75)
    border none
    &:before
      display none

    &:after
      content ''
      display block
      width w = 14px
      height h = 14px
      position absolute
      top 50%
      left 50%
      margin-left -(w/2)
      margin-top -(h/2)
      background whiteColor
      box-shadow inset 0 0 10px rgba(0,0,0,.65)
      border-radius 50%
